<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/dark_green</item>
        <item name="android:background">@color/light_green</item>
    </style>
    
    <style name="AppTheme.Translucent" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/light_green_translucent</item>
    </style>
    
    <style name="light" parent="@android:style/TextAppearance">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="light.Large">
        <item name="android:textSize">21dp</item>
    </style>
    <style name="dark" parent="@style/light">
        <item name="android:layout_marginTop">-9dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">17dp</item>
    </style>
    <style name="dark.Large">
        <item name="android:textSize">26dp</item>
    </style>
    <style name="dark.Large.Bold">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="white_button_text">
        <item name="android:textSize">28sp</item>
    </style>
    
    <color name="medium_green">#89A33C</color>
    <color name="light_green_translucent">#BBBCE053</color>
    <color name="light_green">#BCE053</color>
    <color name="dark_green">#667A2D</color>
    <color name="opacity_white">#AAFFFFFF</color>
    <color name="opacity_back">#88000000</color>
    <color name="opaque">#00000000</color>
</resources>