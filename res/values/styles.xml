<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/light_green</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/dark_green</item>
        <item name="android:background">@color/light_green</item>
        
    </style>
    
    <style name="AppTheme.Translucent" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/light_green_translucent</item>
    </style>
    
    <style name="light" parent="@android:style/TextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="light.Large" parent="@style/light">
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>
    <style name="dark" parent="@style/light">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="dark.Large" parent="@style/dark">
        <item name="android:textSize">26dp</item>
    </style>
    <style name="dark.Small" parent="@style/dark">
        <item name="android:textSize">18dp</item>
    </style>
    <style name="dark.Bold" parent="@style/dark">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="dark.Large.Bold" parent="@style/dark.Large">
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="white_button_text">
        <item name="android:textSize">28sp</item>
    </style>
    
    <color name="light_green_translucent">#EEBCE053</color>
    <color name="light_green">#BCE053</color>
    <color name="medium_green">#89A33C</color>
    <color name="dark_green">#667A2D</color>
    <color name="opacity_white">#BBFFFFFF</color>
    <color name="opacity_black">#99000000</color>
    <color name="opaque">#00000000</color>
</resources>