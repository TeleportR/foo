<PreferenceScreen
    xmlns:robobunny="http://robobunny.com"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/search_settings">
        <com.robobunny.SeekBarPreference
            android:key="radius_from"
            android:title="@string/radius_from"
            android:summary="@string/radius_from_desc"
            robobunny:min="1"
            android:max="75"
            robobunny:unitsLeft="ca."
            robobunny:unitsRight="km"
            android:defaultValue="15" />
        <com.robobunny.SeekBarPreference
            android:key="radius_to"
            android:title="@string/radius_to"
            android:summary="@string/radius_to_desc"
            robobunny:min="1"
            android:max="75"
            robobunny:unitsLeft="ca."
            robobunny:unitsRight="km"
            android:defaultValue="25" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Advanced" >
        <ListPreference 
            android:key="refresh"
            android:title="@string/refresh_title"
            android:entries="@array/refresh_entries"
            android:entryValues="@array/refresh_values"
            android:summary="@string/refresh_description"
            android:defaultValue="600000" />

        <PreferenceScreen android:title="Special Expert Features" >
            <CheckBoxPreference
                android:key="remember_password"
                android:defaultValue="false"
                android:title="@string/remember_password"
                android:summary="@string/remember_password_desc" />
            <CheckBoxPreference
                android:key="create_contact"
                android:defaultValue="false"
                android:title="@string/create_contact"
                android:summary="@string/create_contact_desc" />
            <CheckBoxPreference
                android:key="verbose"
                android:defaultValue="false"
                android:title="@string/verbose"
                android:summary="@string/verbose_desc" />
       </PreferenceScreen>

       <Preference
            android:key="about"
            android:title="@string/about" />
    </PreferenceCategory>
</PreferenceScreen>