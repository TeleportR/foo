<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/settings"
        android:key="settings">
        <CheckBoxPreference
            android:key="background_data"
            android:title="@string/background_data"
            android:summary="@string/background_data_description"
            android:defaultValue="false" />
        <ListPreference 
            android:key="background_interval"
            android:dependency="background_data"
            android:title="@string/background_interval"
            android:entries="@array/background_iterval"
            android:entryValues="@array/background_iterval"
            android:summary="@string/background_interval_description"
            android:defaultValue="1h" />
        <CheckBoxPreference
            android:key="nofification"
            android:dependency="background_data"
            android:title="@string/notification"
            android:summary="@string/notification_description"
            android:defaultValue="true" />
    </PreferenceCategory>
</PreferenceScreen>