<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fg="http://schemas.android.com/apk/res/de.fahrgemeinschaft" >
    
    <item fg:state_visible_for_nobody="true" android:drawable="@android:color/black" />
    <item fg:state_visible_for_anybody="true" android:drawable="@color/opacity_white" />
    <item fg:state_visible_for_members="true" android:drawable="@color/light_green" />
    <item fg:state_visible_upon_request="true" android:drawable="@color/dark_green" />
    
    <item android:state_selected="true" android:drawable="@color/opacity_white" />
    <item android:state_pressed="true" android:drawable="@android:color/white" />
    <item android:state_focused="true" android:drawable="@android:color/white" />
</selector>