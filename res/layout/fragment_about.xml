<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darker_green" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="22dp"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/copyright"
            style="@style/light"
            android:background="@color/medium_green"
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:textColor="@color/darker_green"
            android:textStyle="bold"
            android:text="Copyright (C) 2013 by it's authors.
                            Some rights reserved. See LICENSE"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/medium_green"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/medium_green"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:gravity="right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/medium_green" />

        <TextView
            android:id="@+id/license_text"
            style="@style/light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/medium_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="This program is free software: you can redistribute it and/or modify
it under the terms of the GNU General Public License as published by
the Free Software Foundation, either version 3 of the License, or
(at your option) any later version.

This program is distributed in the hope that it will be useful,
but WITHOUT ANY WARRANTY; without even the implied warranty of
MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
GNU General Public License for more details.

You should have received a copy of the GNU General Public License
along with this program.  If not, see http://www.gnu.org/licenses/."
            android:gravity="left" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/medium_green"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:text="// build with"
            android:gravity="right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/medium_green" />

        <TextView
            android:id="@+id/crouton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lighter_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="keyboardsurfer crouton"
            android:gravity="left" />
        <TextView
            android:id="@+id/actionbarsherlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lighter_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="actionbarsherlock.com"
            android:gravity="left" />
        <TextView
            android:id="@+id/geohash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lighter_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="kungfoo geohash-java"
            android:gravity="left" />
        <TextView
            android:id="@+id/teleportr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lighter_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="teleportR.org library"
            android:gravity="left" />
        <TextView
            android:id="@+id/volley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/lighter_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="android.com volley"
            android:gravity="left" />
        <TextView
            android:id="@+id/iconmonstr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/medium_green"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="android.com volley"
            android:gravity="left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="@color/medium_green"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:text="// styled by"
            android:gravity="right" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/medium_green" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:singleLine="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="styled by"
            android:textSize="18sp" />
        
        <ImageView
            android:id="@+id/subphisticated_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-34dp"
            android:layout_gravity="right"
            android:src="@drawable/icn_sbphstctd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="0dp"
            android:background="@color/medium_green" />

        <TextView
            android:id="@+id/git_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="github.com/fahrgemeinschaft/android-app"
            android:gravity="left" />

    </LinearLayout>
</ScrollView>