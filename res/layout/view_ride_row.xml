<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="28dp" >

    <ImageView
        android:id="@+id/reoccuring"
        android:src="@drawable/icn_reoccuring"
        android:visibility="gone"
        android:layout_width="40dp"
        android:contentDescription="@string/reccurence" />

    <TextView
        android:id="@+id/day"
        style="@style/dark.Large"
        android:layout_width="40dp"
        android:textIsSelectable="false"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/date"
        style="@style/light.Large"
        android:layout_width="98dp"
        android:layout_marginLeft="-10dp"
        android:gravity="center_horizontal"
        android:textIsSelectable="false"
        android:layout_height="match_parent"
        android:paddingLeft="3dp" />

    <TextView
        android:id="@+id/time"
        style="@style/dark.Large.Bold"
        android:layout_width="68dp"
        android:textIsSelectable="false"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/price"
        style="@style/light.Large.Bold"
        android:layout_weight="1"
        android:layout_marginLeft="-10dp"
        android:textIsSelectable="false"
        android:layout_height="match_parent"
        android:gravity="center" />

    <ImageView
        android:id="@+id/seats"
        android:layout_height="match_parent"
        android:contentDescription="@string/seats"
        android:src="@drawable/ic_seats" />

</merge>