<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <de.fahrgemeinschaft.util.ButtonImageButton
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/larger"
        android:src="@drawable/icn_datepicker"
        android:text="@string/date" />

    <de.fahrgemeinschaft.util.ButtonImageButton
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/medium"
        android:src="@drawable/icn_timepicker"
        android:text="@string/time" />

    <TextView
        android:id="@+id/recurrence_text"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/larger"
        android:background="@color/medium_green"
        android:gravity="bottom"
        android:height="12dp"
        android:paddingLeft="@dimen/small"
        android:paddingRight="@dimen/small"
        android:text="@string/reccurence"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/recurrence"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xlarge"
        android:orientation="horizontal" >
    </LinearLayout>

    <de.fahrgemeinschaft.util.EditTextImageButton
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/larger"
        android:src="@drawable/icn_pricepicker"
        android:hint="@string/price" />

</LinearLayout>