<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/medium" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small"
            android:layout_marginBottom="@dimen/small" >

            <Button
                android:id="@+id/btn_pick_date"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_white"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="@string/date"
                style="@style/place_pick_btn" />

            <ImageButton
                android:id="@+id/ic_pick_date"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_white"
                android:src="@drawable/icn_datepicker" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small" >

            <Button
                android:id="@+id/btn_pick_time"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/btn_white"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:text="@string/time"
                style="@style/place_pick_btn" />

            <ImageButton
                android:id="@+id/ic_pick_time"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_white"
                android:src="@drawable/icn_timepicker" />
        </FrameLayout>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/recurrence_text"
        android:layout_width="match_parent"
        android:height="12dp"
        android:layout_marginTop="@dimen/large"
        android:gravity="bottom"
        android:textColor="#FFFFFF"
        android:text="Regelmäßige Fahrt: jede Woche am" />
    
    <LinearLayout
        android:id="@+id/recurrence"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/large" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/btn_pick_price"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:selectAllOnFocus="true"
                android:background="@drawable/btn_white"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:hint="@string/price"
                android:inputType="numberDecimal"
                style="@style/place_pick_btn" />

            <ImageButton
                android:id="@+id/ic_pick_price"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_white"
                android:src="@drawable/icn_pricepicker" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>