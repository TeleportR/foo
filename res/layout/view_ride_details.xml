<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    class="de.fahrgemeinschaft.RideDetailsFragment$RideView"
    android:background="@color/light_green_translucent"
    android:padding="13dp" >

    <LinearLayout
        android:id="@+id/row"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@color/medium_green" >

        <TextView
            android:id="@+id/day"
            style="@style/dark.Large"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/date"
            style="@style/light.Large"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/time"
            style="@style/dark.Large.Bold"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/price"
            style="@style/dark.Large.Bold"
            android:layout_gravity="right"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/currency"
            style="@style/light.Large"
            android:layout_height="match_parent"
            android:paddingRight="3dp"
            android:text="â‚¬" />

        <ImageView
            android:id="@+id/seats_icon"
            android:layout_height="match_parent"
            android:contentDescription="@string/seats"
            android:src="@drawable/ic_seats" />
    </LinearLayout>

    <Button
        android:onClick="contact"
        android:id="@+id/btn_contact"
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/content"
        android:background="@drawable/btn_dark_green"
        android:text="@string/contact"
        android:src="@drawable/btn_dark_green" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_contact"
        android:layout_below="@id/row"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" >

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                android:id="@+id/from_place"
                layout="@layout/view_place_bubble"
                android:layout_width="match_parent" />

            <include
                android:id="@+id/to_place"
                layout="@layout/view_place_bubble"
                android:layout_width="match_parent" />
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/medium_green"
                android:padding="@dimen/small"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/small" >
                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/xxlarge"
                    android:layout_height="@dimen/xxlarge"
                    android:src="@drawable/ic_launcher"
                    android:background="@color/medium_green" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/small"
                    android:background="@color/almost_medium_green" >
                    <TextView 
                        android:id="@+id/driver_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/small"
                        style="@style/dark.Large.Bold" />
                </LinearLayout>
            </LinearLayout>
            
            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/small"
                android:background="@color/medium_green"
                android:padding="@dimen/medium"
                android:singleLine="false"
                android:textColor="@color/opacity_black" />
        </LinearLayout>
    </ScrollView>
</view>